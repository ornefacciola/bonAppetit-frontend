{
  "expo": {
    "name": "Bon Appetit",
    "slug": "bonAppettitFrontend",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/bon-appetit-smaller.png",
    "scheme": "bonappettitfrontend",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Esta app necesita acceso a tu galer√≠a para subir fotos y videos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/bon-appetit-smaller.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdge": true,
      "navigationBar": {
        "visible": "auto",         
        "barStyle": "light-content" 
      },
      "package": "com.juanirios.bonappetit",
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image":  "./assets/images/bon-appetit-smaller.png",
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "8e34cb60-577a-4259-b538-94dc55345b1c"
      }
    }
  }
}